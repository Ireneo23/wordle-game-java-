<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下状态 -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#4D4D4D" /> <!-- 按下时的颜色 -->
            <corners android:radius="4dp" /> <!-- 圆角 -->
        </shape>
    </item>
    <!-- 默认状态 -->
    <item>
        <shape>
            <solid android:color="#636363" /> <!-- 默认颜色 -->
            <corners android:radius="4dp" /> <!-- 圆角 -->
        </shape>
    </item>
</selector>